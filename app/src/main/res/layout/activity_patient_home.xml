<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blurred"
    tools:context=".PatientHome">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="11dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="327dp"
            android:layout_height="47dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="14dp"
            android:gravity="center|left"
            android:text="Welcome {user}!"
            android:textColor="#200761"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="72dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/abbvie_transparent"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="391dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        app:cardBackgroundColor="#E1FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <TextView
            android:id="@+id/antibodies"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="{number}"
            android:textColor="#200761"
            android:textSize="50sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="412dp"
        android:layout_height="52dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:layout_gravity="center|top"
            android:text="of our warriors got through last time!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="5dp"
            android:layout_gravity="bottom|center"
            android:background="#B5FFFFFF" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="232dp"
        android:layout_height="354dp"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <android.support.v7.widget.CardView
            android:id="@+id/info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#96FFFFFF"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/info_icon"
                android:layout_width="87dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/info_icon" />

            <Button
                android:id="@+id/info_button"
                android:layout_width="160dp"
                android:layout_height="87dp"
                android:layout_gravity="center|right|top"
                android:background="#00FFFFFF"
                android:shadowDx="10"
                android:shadowRadius="10"
                android:text="Resources"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="30sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/message_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#96FFFFFF"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="87dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/msg_icon" />

            <Button
                android:id="@+id/message_button"
                android:layout_width="160dp"
                android:layout_height="87dp"
                android:layout_gravity="center|right|top"
                android:background="#00FFFFFF"
                android:shadowDx="10"
                android:shadowRadius="10"
                android:text="Message"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/history_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#96FFFFFF"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/history_icon"
                android:layout_width="87dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/history_icon" />

            <Button
                android:id="@+id/history_button"
                android:layout_width="160dp"
                android:layout_height="87dp"
                android:layout_gravity="center|right|top"
                android:background="#00FFFFFF"
                android:shadowDx="10"
                android:shadowRadius="10"
                android:text="History"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blurred"
    tools:context=".PhysicianHome">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMenuDock"
        android:layout_width="323dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvDocInfoBar"></android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDocInfoBar"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="500dp"
        android:elevation="30dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="Case: M19-32719"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            app:fontFamily="@font/comfortaa_bold" />

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:text="Progress: 3/50 Months"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            app:fontFamily="@font/comfortaa_bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDocBar"
        android:layout_width="323dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvDocInfoBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgDocProfPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/doc"
            tools:srcCompat="@drawable/doc" />

        <TextView
            android:id="@+id/txtDocName"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="85dp"
            android:text="Dr. Abbvie Abbvieman"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:fontFamily="@font/comfortaa_bold" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
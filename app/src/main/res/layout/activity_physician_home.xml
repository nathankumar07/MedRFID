<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blurred"
    tools:context=".PhysicianHome">

    <android.support.v7.widget.CardView
        android:id="@+id/cvAlert4"
        android:layout_width="323dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvDocInfoBar">

        <ImageView
            android:id="@+id/imgAlerts"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/alerts_blue" />

        <ImageView
            android:id="@+id/imgGraph"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/graph_blue" />

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@drawable/profile_blue" />

        <ImageView
            android:id="@+id/imgSettings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@drawable/settings_blue" />

        <TextView
            android:id="@+id/txtAlerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="105dp"
            android:text="Alerts"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:fontFamily="@font/comfortaa_bold" />

        <TextView
            android:id="@+id/txtProfiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="35dp"
            android:text="Profiles"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:fontFamily="@font/comfortaa_bold" />

        <TextView
            android:id="@+id/txtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="35dp"
            android:text="Settings"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:fontFamily="@font/comfortaa_bold" />

        <TextView
            android:id="@+id/txtGraphs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="105dp"
            android:layout_marginRight="55dp"
            android:text="Data"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:fontFamily="@font/comfortaa_bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDocInfoBar"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="550dp"
        android:elevation="30dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="#M19-32719 - DigestaPills"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            app:fontFamily="@font/comfortaa_bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDocBar"
        android:layout_width="323dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="30px"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvDocInfoBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgDocProfPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/doc"
            tools:srcCompat="@drawable/doc" />

        <TextView
            android:id="@+id/txtDocName"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="85dp"
            android:text="Dr. Abbvie Abbvieman"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:fontFamily="@font/comfortaa_bold" />

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="275dp"
            app:srcCompat="@drawable/arrow_blue" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>